<form action="{{ path('new_vhost') }}" method="post" class="form-horizontal" role="form">
  <div class="form-group">
    <label for="inputServerName" class="col-sm-2 control-label">ServerName:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="servername" id="inputServerName" placeholder="test.com.localhost ...">
    </div>
  </div>
  <div class="form-group">
    <label for="inputDocumentRoot" class="col-sm-2 control-label">DocumentRoot:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="documentroot" id="inputDocumentRoot" placeholder="c:\wamp\www\projet ***">
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Add</button>
      
      <button type="button" class="btn btn-default cancel">Cancel</button>
    </div>
  </div>
</form>
