<form id="createForm" action="{{ path('new_vhost') }}" method="post" class="form-horizontal" role="form" {{ form_enctype(form) }}>
     {{ form_errors(form) }}
  <div class="form-group">
    <label for="inputServerName" class="col-sm-2 control-label">ServerName:</label>
    <div class="col-sm-10">
        {{ form_errors(form.servername) }}
        {{ form_widget(form.servername, { 'attr': {'id': 'inputServerName', 'class': 'form-control', 'placeholder': "test.com.localhost ..."} }) }}
    </div>
  </div>
  <div class="form-group">
    <label for="inputDocumentRoot" class="col-sm-2 control-label">DocumentRoot:</label>
    <div class="col-sm-10">
        {{ form_errors(form.documentroot) }}
        {{ form_widget(form.documentroot, { 'attr': {'id': 'documentroot', 'class': 'form-control', 'placeholder': "c:\wamp\www\projet ***", 'required': 'required'} }) }}
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Add</button>
      
      <button type="button" class="btn btn-default cancel">Cancel</button>
    </div>
  </div>
    {{ form_rest(form) }}
</form>
