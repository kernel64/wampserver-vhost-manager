<form id="createForm" action="{{ path('update_vhost', { 'filename': filename|trim }) }}" method="post" class="form-horizontal" role="form" {{ form_enctype(form) }}>
  {{ form_errors(form) }}
  <div class="form-group">
    <div class="col-sm-12">
        {{ form_errors(form.config) }}
        {{ form_widget(form.config, { 'attr': {'class': 'form-control', 'row': "3"} }) }}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Update</button>
      <button type="button" class="btn btn-default cancel">Cancel</button>
    </div>
  </div>
     {{ form_rest(form) }}
</form>